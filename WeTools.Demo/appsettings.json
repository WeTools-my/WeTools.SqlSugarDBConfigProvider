{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "WeTools": {
    // "ConnectionString": "host=localhost;port=3306;user id=root;password=;database=sugar;",
    "ConnectionString": "Data Source=wedb.s3db",
    "DatabaseType": 2, //sqlsugar 类型一致，默认0  MySql = 0,SqlServer = 1,Sqlite = 2,Oracle = 3,PostgreSQL = 4,Dm = 5,Kdbndp = 6
    "InitTable": true, //是否初始化表，默认true,如果表已存在，不会进行覆盖
    "ReloadInterval": 3, //配置重载时间间隔，单位秒，如果设置0 使用默认值3秒
    "ReloadOnChange": true //是否重载配置
  }
}
